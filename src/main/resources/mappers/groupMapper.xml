<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.bcc.mapper.groupMapper">
  
  	<select id="getMemberList" resultType="MemberVO">
  		select id, name, license
  		from bcc_member 
  		where id like concat('%', #{id}, '%')
  	</select>
  	
  	<select id="getGrpNum" resultType="int">
  		select max(num) 
  		from bcc_plan 
  	</select>
  	
  	<insert id="createGrp">
  		insert into bcc_plan(num, leader) 
  		values(#{num}, #{leader}) 
  	</insert>
  	
  	<select id="getLicense" resultType="string">
  		select license 
  		from bcc_member 
  		where id = #{id}
  	</select>
  	
  	<select id="getGrpAcceptList" resultType="GrpAcceptListVO">
 		select grp_num, sender, grp_name 
  		from bcc_grp_accept a join bcc_plan b
        on a.grp_num = b.num
  		where receiver = #{receiver};
  	</select>
  	
  </mapper>
  